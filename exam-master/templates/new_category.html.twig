{% extends 'base.html.twig' %}

{% block title %}New Category{% endblock %}

{% block body %}
    <h1>New Category</h1>

    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.description) }}
        {{ form_row(form.createdAt) }}
        {{ form_row(form.products) }}
        {{ form_row(form.slug) }}
        <div class="mb-3">
            <button type="submit" class="btn-success btn">Add</button>
        </div>
    {{ form_end(form) }}
{% endblock %}